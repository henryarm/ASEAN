<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:gravity="center_horizontal"
    tools:context="com.example.asean.AseanListMoneyActivity">

    <ImageView
        android:id="@+id/image_view_money_a"
        android:gravity="center"
        tools:src="@drawable/brunei_money_1"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/image_view_money_b"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        tools:src="@drawable/brunei_money_2" />

    <TextView
        android:id="@+id/text_view_name"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_exchange_rate"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="100dp" />

    <!--<TextView-->
        <!--android:id="@+id/text_view_monay_4"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <!--<TextView-->
        <!--android:id="@+id/text_view_monay_5"-->
